{
  "name": "codeql-issue-maker",
  "version": "1.0.0",
  "description": "Runs CodeQL analysis, filters files, and creates GitHub issues for findings.",
  "author": "pixpilot",
  "license": "MIT",
  "keywords": [
    "github-actions",
    "codeql",
    "security",
    "sarif"
  ],
  "main": "index.js",
  "scripts": {
    "build": "esbuild index.js --bundle --platform=node --target=node20 --outfile=dist/index.js",
    "package": "esbuild index.js --bundle --platform=node --target=node20 --outfile=dist/index.js --sourcemap"
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^6.0.0",
    "@actions/glob": "^0.4.0"
  },
  "devDependencies": {
    "esbuild": "^0.19.0"
  }
}
