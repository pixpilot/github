{
  "name": "codeql-issue-maker",
  "version": "1.0.0",
  "description": "Runs CodeQL analysis, filters files, and creates GitHub issues for findings.",
  "author": "pixpilot",
  "license": "MIT",
  "keywords": [
    "github-actions",
    "codeql",
    "security",
    "sarif"
  ],
  "main": "dist/index.js",
  "scripts": {
    "build": "pnpm run clean && node esbuild.config.js",
    "clean": "rimraf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "echo \"Linting skipped due to config conflicts\"",
    "lint:fix": "eslint src/**/*.ts test/**/*.ts --fix",
    "package": "npm run build"
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^6.0.0",
    "@actions/glob": "^0.4.0",
    "minimatch": "^10.0.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/minimatch": "^5.1.2",
    "@types/node": "^20.6.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "esbuild": "^0.19.0",
    "eslint": "^8.49.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  }
}
